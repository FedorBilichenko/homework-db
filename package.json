{
  "name": "homework-db",
  "version": "1.0.0",
  "description": "homework-db",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "nodemon",
    "start:prod": "yarn build && node ./build/index.js",
    "lint": "eslint --ext .js,.ts src",
    "lint-fix": "yarn lint --fix",
    "ts-check": "tsc --skipLibCheck --noEmit --project tsconfig.json"
  },
  "keywords": [],
  "author": "Fedor Bilichenko",
  "license": "ISC",
  "devDependencies": {
    "@shopify/eslint-plugin": "^39.0.3",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },

  "husky": {
    "hooks": {
      "pre-commit": "yarn ts-check && yarn lint-fix"
    }
  }
}
